{
  "name": "movie-vibes",
  "version": "1.0.0",
  "description": "A social media application for movie enthusiasts",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspaces foreach -p run dev",
    "build": "yarn workspaces foreach -t run build",
    "test": "yarn workspaces foreach -p run test",
    "lint": "yarn workspaces foreach -p run lint",
    "type-check": "yarn workspaces foreach -p run type-check",
    "clean": "yarn workspaces foreach -p run clean"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "yarn@4.0.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  }
}